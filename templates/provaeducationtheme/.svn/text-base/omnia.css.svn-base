@charset "UTF-8";
/* CSS Document */

body { 
  background:url("./img/BG_body.gif") repeat-x scroll 0 0 transparent;
}

#header {
	background:url("./img/BG_Header.gif") no-repeat scroll center top transparent;
	margin: 0;
}

#masthead {
	height:106px;
	margin:0 auto;
	padding:0;
	position:relative;
	width:940px;
  font:11px normal Verdana,Arial,Helvetica,sans-serif;	
}

#masthead img
{
	float: left;
	margin: 0;
}

/* =calltoaction */
#calltoaction
{
	float: right;
	margin: 0;
	padding: 0;
	height: 29px;
	width: 272px;
}

#calltoaction p
{
	margin: 0;
	padding: 0;
	height: 20px;
	width: 272px;
	text-align: center;
	padding-top: 5px;
	color: #FFFFFF;
	font-style: italic;	
}

#calltoaction p strong
{
	color: #FFFFFF;
}


/* =primarynav */
#primarynav
{
	position: absolute;
	right: 0;
	bottom: 3px;
	z-index: 3;
	margin: 0;
	padding: 0;
	height: 26px;
	overflow: hidden;
}


/* =Primary Navigation [#primarynav]
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */

#primarynav ul
{
	list-style: none;
	overflow: hidden;
	position: relative;
	height: 24px;
	margin: 0;
	padding: 0;
	background-color: #950030;

}

#primarynav li
{
	margin: 0; 
	padding: 0;
	height: 24px;
	overflow: hidden;
	float: left;
	border-left: solid 1px #FFFFFF;
}

#primarynav li a:hover
{
	background-color: #908200;
}

#primarynav li, #primarynav a
{
	height: 24px;
	display: block;
	overflow: hidden;
}

#primarynav a
{
	padding: 6px 18px 0px 18px;
	text-align: center;
	color: #FFFFFF;
	text-decoration: none;
	overflow: hidden;
}

/* safari workaround */

.safarifix {position: relative; left: -100px;} /* Hide it */

/* =footer 
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
#footer {
	padding: 5px;
}

#footer img {
	margin-top: -10px;
}


#omnia-footer
{
	position: relative;
	clear: both;
	width: 100%;
	padding: 16px 0px;
	margin: 0;
	border-top: 1px solid #e5e5e5;
	font-size: 10px;
	font-weight: normal;
	color: #666;	
}

#omnia-footer p
{
	margin: 0;
	padding: 0;
	width: 950px;
	margin: 0 auto;
}

#omnia-footer span#footercopy
{
	float: left;
	margin: 0 0 0 36px;
}

#omnia-footer span#footernav
{
	float: right;
}