/*
* Override dashboard-at.css
*/

body {
	font-family: Raleway, Arial, sans-serif !important;
}
{
	font-size: 18px;
	font-family: 'Raleway', trebuchet ms, sans-serif !important;
	border: 0;
	cursor: pointer;
	color: #FFF;
	border-radius: 6px;
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	padding: 5px 15px;
	height: 32px;
	margin: 3px 10px;
	text-shadow: none;
	line-height: 32px;
	font-weight: normal;
	background: #008CcC;
	margin: 0;
}

#page {
	 background-color: #EEE !important;
}
